<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Add Emergency Contact Button -->
    <Button
        android:id="@+id/btnAddContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Emergency Contact"
        android:backgroundTint="#1E88E5"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Customize Contacts Button -->
    <Button
        android:id="@+id/btnCustomizeContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize Contacts"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Contact List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Contact 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/contactName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dad"
                android:textSize="18sp"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

	<!-- Contact 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/contactName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Friend"
                android:textSize="18sp"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

	<!-- Contact 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/contactName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MOM"
                android:textSize="18sp"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>


        <!-- Add more contacts as needed (repeat the LinearLayout above) -->
    </LinearLayout>
</LinearLayout>
